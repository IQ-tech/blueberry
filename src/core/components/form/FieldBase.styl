@import '../../variables.styl'

.iq-field-base
	resetBoxSizing()
	font-family 'Open Sans'

	&__label
		font-weight 600
		font-size 14px
		margin-bottom 8px
		line-height 22px
		display block

	&__required
		color red-50

	&__error-message
		padding 0
		margin 0
		line-height 20px
		color red-50
		margin-top 8px
		font-size 12px
