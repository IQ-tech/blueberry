@import '../variables.styl'

$ballon-width = 228px;
$ballon-arrow-centered = calc(50% - 11px)

.iq-tooltip
  resetBoxSizing()
  
  &
    position absolute
    max-width $ballon-width
    z-index 10
    text-align left
    opacity 1
    visibility visible
    transition 1s visibility .3s cubic-bezier(0.455, 0.030, 0.515, 0.955), 
              opacity .3s cubic-bezier(0.455, 0.030, 0.515, 0.955)
    
  &-content
    box-shadow 1px 3px 19px rgba(0, 0, 0, 0.25)
    position relative
    border-radius 8px
    padding 16px

  &-arrow
    content ''
    width 20px
    height 20px
    position absolute
    border-radius 4px
    transform rotate(135deg) skew(-10deg, -10deg)
    transform-origin center

  &--color-dark
    .iq-tooltip-content
      background-color blueberry-80
      color white

    .iq-tooltip-arrow
      background-color blueberry-80

  &--color-light
    .iq-tooltip-content
      background-color white
      color gray-50

    .iq-tooltip-arrow
      background-color white

  &--placement-top
    padding-bottom 20px

    .iq-tooltip-arrow
      bottom -6px
      left $ballon-arrow-centered

  &--placement-topLeft
    padding-bottom 20px

    .iq-tooltip-arrow
      bottom -6px
      left 10px     
  
  &--placement-left
    padding-right 20px

    .iq-tooltip-arrow
      right -8px
      top $ballon-arrow-centered
      transform rotate(45deg)

  &--placement-right
    padding-left 20px

    .iq-tooltip-arrow
      left -8px
      top $ballon-arrow-centered
      transform rotate(45deg)
  
  &--placement-bottom
    padding-top 20px

    .iq-tooltip-arrow
      top -6px
      left $ballon-arrow-centered     

  &--placement-bottomLeft
    padding-top 20px

    .iq-tooltip-arrow
      top -6px
      left 10px
        
  &__title
    margin 0
    font-size 16px
    line-height 24px
    font-weight 600
    font-family 'Baloo Chettan 2'

    + .iq-tooltip__desc 
      margin-top 8px
  
  &__desc
    font-size 12px
    line-height 20px
    margin-top 0
    margin-bottom 0
    font-weight 400
    font-family 'Open Sans'

  &__question
    font-size 14px
    line-height 22px
    font-weight 700
    border-radius 50%
    width 24px
    height 24px
    font-family 'Open Sans'
    cursor pointer
    display flex
    align-items center
    justify-content center
    color white
    transition background-color .3s ease

    &--dark
      color white
      background-color blueberry-60

      &:hover,
      &:focus
        background-color blueberry-50
    
    &--light
      color blueberry-60
      background-color cyan-30

      &:hover,
      &:focus
        background-color cyan-20

  &-hidden
    visibility hidden
    opacity 0
    transition 1s visibility .3s cubic-bezier(0.455, 0.030, 0.515, 0.955), 
              opacity .3s cubic-bezier(0.455, 0.030, 0.515, 0.955)
      