@import '../../variables'

.footer-classic
	font-family 'Open Sans', sans-serif

	&, *
		box-sizing border-box
		margin 0
		padding 0

	&__container
		max-width 1220px
		margin 0 auto

		&--navigation
			display flex
			flex-direction column

			+aboveMedium()
				flex-direction row
				justify-content: space-between

	&__logo
		svg
			width 42px
			height 55px

	&__pages-menu
		border-top 1px solid #dcdcdc
		border-bottom 1px solid #dcdcdc
		padding 15px 0
		margin 25px 0
		display flex
		flex-direction column

		+aboveMedium()
			margin 0
			flex-direction row
			border-top none
			border-bottom none

	&__links-group
		&:not(:last-of-type)
			border-bottom 1px solid #dcdcdc

			+aboveMedium()
				border-bottom none

	&__links-group-title
		font-family 'Open Sans', sans-serif
		font-size 14px
		display block
		cursor pointer
		color #000
		font-weight 700

		+aboveMedium()
			font-size 18px
			cursor default

	&__links-list
		list-style none

	&__links-group-link
		text-decoration none
		display block
		padding 10px 0
		color #2f2f2f
		font-size 14px
		font-weight 300
		transition text-decoration 0.3s ease

		&:hover
			text-decoration underline