@import '../../variables'

.footer-classic
	componentDeepReset()
	font-family 'Open Sans', sans-serif
	background-color #fff

	+aboveMedium()
		padding-top 40px

	h2
		display block
		cursor pointer
		color #000
		font-weight 700
		line-height 15px
		font-family 'Open Sans', sans-serif

	&__container
		max-width 1220px
		margin 0 auto

		&--info
			+aboveMedium()
				display flex
				justify-content space-between

		&--navigation
			display flex
			flex-direction column

			+aboveMedium()
				flex-direction row
				justify-content space-between
				padding-bottom 40px

	&__logo
		padding 0 20px
		display flex
		justify-content space-between
		align-items center
		flex-direction column
		align-items baseline

		+aboveMedium()
			flex 0.5

	&__iq
		display flex
		align-items center

		+aboveMedium()
			display block

		svg
			width 42px
			height 55px

		span
			font-size 12px
			line-height 22px
			font-weight 400
			color gray-50
			margin-left 10px

			+aboveMedium()
				display block
				margin-left 0
				margin-bottom 5px

	&__partnership

		img
			height 16px

	&__ac
		margin-top 24px
		+aboveMedium()
			margin-top 0

	&__pages-menu
		margin 25px 0
		display flex
		flex-direction column

		+aboveMedium()
			margin 0
			flex-direction row
			flex 2.5

	&__links-group
		border-bottom 1px solid #dcdcdc
		overflow hidden
		max-height 45px
		transition max-height 0.3s ease-out

		&:first-of-type
			border-top 1px solid #dcdcdc

		&--open
			max-height 500px

		+aboveMedium()
			border-bottom none
			max-height none
			flex 1

			&:first-of-type
				border none

	&__links-group-title
		font-size 14px
		padding 15px 20px
		position relative

		&:after, &:before
			content ''
			border 1px solid #000
			position absolute
			top 50%
			width 1px
			height 13px
			margin-top -8px
			transition transform 0.34s cubic-bezier(0.69, 0.01, 0.25, 1)
			opacity 0.15

		&:after
			right 16px
			transform rotate(45deg)

		&:before
			right 25px
			transform rotate(-45deg)

		+aboveMedium()
			font-size 18px
			line-height 20px
			cursor default
			padding-top 0

			&:after, &:before
				display none

	&__links-group--open &__links-group-title
		&:before
			transform rotate(-135deg)

		&:after
			transform rotate(135deg)

	&__links-list
		list-style none
		padding-right 20px
		padding-left 20px

	&__links-group-link
		text-decoration none
		display block
		padding 10px 0
		color #2f2f2f
		font-size 14px
		font-weight 300
		transition text-decoration 0.3s ease

		&:hover
			text-decoration underline

	&__external-infos
		flex 1

	&__social-icons,
	&__certificates
		text-align center
		display flex
		flex-direction column
		align-items center
		margin-bottom 60px

		+aboveMedium()
			text-align left
			align-items end

	&__social-icons-title
		font-size 14px
		font-weight bold

		+aboveMedium()
			font-size 18px

	&__social-icons-box
		display flex
		justify-content space-between
		width 60%
		margin-top 15px

		+aboveMedium()
			width 100%

	&__social-icon
		max-width 30px
		color #000

		svg
			height 100%
			width 100%

	&__certificates
		background-color gray-20
		padding 24px 16px
		margin-bottom 0

		+aboveMedium()
			background-color inherit
			padding 0

		&-title
			font-size 14px
			font-weight bold

			+aboveMedium()
				font-size 18px

		&-wrap
			margin-top 15px
			width 100%
			display flex
			justify-content space-between
			align-items center

	&__info
		color #555
		background-color #e6e6e6
		font-size 14px
		padding 40px
		padding-bottom 70px

		&-right
			> .footer-classic__info-block
				+aboveMedium()
					text-align right

		&-left
			> .footer-classic__info-block
				+aboveMedium()
					text-align left

	&__info-block
		text-align center

		&--copy
			color gray-60

		&--contact
			margin-top 32px

			+aboveMedium()
				margin-top 0

		span
			display block

		&:not(:last-of-type)
			margin-bottom 30px
