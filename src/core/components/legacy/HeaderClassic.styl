@import '../../variables'

$main-blue = #352ca4
$color-blue-light = #0de3f2
$color-blue-dark = #1c1277
$color-white = #fff
$header-mobile-height = 60px

.header-classic
	*
		box-sizing border-box

	ul
		list-style none

	position absolute
	top 0
	left 0
	right 0
	color $color-white
	font-family 'Open Sans', sans-serif
	font-size 14px
	font-weight 400

	&__navbar
		background-color $main-blue
		height 60px
		display flex
		align-items center

		+aboveSmall()
			height 70px

	&__container
		display flex
		justify-content space-between
		align-items center
		width 100%
		max-width 1280px
		margin 0 auto
		padding-left 15px
		padding-right 15px

	&__logo
		height 100%
		width 100%

	&__logo-link
		height 46px
		width 33px
		display block
		color $color-white
		margin-right 20px
		transform scale(0.8)

		+aboveMedium()
			transform scale(1)

	&__panel-right
		flex 1
		display flex
		justify-content flex-end

		+aboveMedium()
			justify-content space-between

	&__hamburger
		display flex
		background-color transparent
		outline none
		border none
		height 17px
		width 20px
		flex-direction column
		justify-content space-between
		cursor pointer

		+aboveMedium()
			display none

	&__hamburger-line
		background-color $color-white
		height 1px
		width 20px

		&--one
			transition transform 0.75s cubic-bezier(1, -0.4, 0, 1.41)
			will-change transform

		&--two, &--three
			transition 0.9s cubic-bezier(0.38, 0.52, 0.11, 1.2)
			will-change transform, width

	.header-classic__hamburger--close
		.header-classic__hamburger-line--one
			transform translateX(270px)

		.header-classic__hamburger-line--two
			transform rotate(45deg)

		.header-classic__hamburger-line--three
			transform rotate(-45deg) translate(6px, -6px)

	// Menu holder
	&__menu-holder
		width 100vw
		height 'calc(100vh - %s)' % $header-mobile-height
		position fixed
		background-color $main-blue
		top $header-mobile-height
		left 0
		transform translateX(-100vw)
		transition transform 0.3s ease-in

		+aboveMedium()
			width auto
			height auto
			position static
			transform translateX(0)
			flex 1

	&--menu-mobile-open &__menu-holder
		transform translateX(0)

	&--submenu-open &__menu-holder
		z-index 2

	&--logged .header-classic__menu-holder
		background-color red
		height 100vh
		top 0

	&__logged-out-navigation
		display flex
		flex-direction column
		height 100%
		width 100%
		justify-content flex-start

		+aboveMedium()
			padding-left 30px
			flex-direction row
			justify-content space-between
			align-items center

	&__logged-out-navigation-list
		display flex
		flex-direction column
		max-width 250px
		margin 0 auto
		margin-top 100px

		+aboveMedium()
			flex-direction row
			margin-top 0
			margin 0
			max-width none
			align-items center

	&__logged-out-navigation-item
		+aboveMedium()
			position relative

			&:not(:first-of-type)
				margin-left 10px

	&__logged-out-navigation-link
		color $color-white
		text-decoration none
		display block
		padding 20px
		font-weight 400
		border-radius 20px
		font-size 18px
		transition border 0.3s ease, color 0.3s ease

		&:hover
			color #099faa

		&--active
			color $color-blue-light
			font-weight 700

		+aboveMedium()
			font-size 14px
			padding 10px 15px
			border 1.5px solid transparent

			&:hover
				border-color #251f73
				color $color-white

			&--active
				border-color $color-blue-light
				font-weight 400
				color $color-white

	&__auth-buttons
		display flex
		flex-direction column
		position absolute
		bottom 0
		transform translateY(100%)
		transition transform 0.2s ease-out 0.3s
		width 100%

		+aboveMedium()
			flex-direction row
			position static
			width auto
			transform translateY(0)

	&--submenu-open &__auth-buttons
		z-index -1

	&--menu-mobile-open &__auth-buttons
		transform translateY(0)

	&__auth-button
		padding 20px
		justify-content center
		border none
		font-weight 700
		font-size 18px
		border none
		cursor pointer
		transition background 0.3s ease, color 0.3s ease
		display flex
		align-items center
		outline none

		+aboveMedium()
			font-size 14px
			border-radius 4px
			padding 15px 30px

		&--sign-in
			color $color-white
			background-color $color-blue-dark

			+aboveMedium()
				background-color transparent

		&--sign-up
			color $color-blue-dark
			background-color $color-blue-light

			&:hover
				background-color #9cf7fc

	&__auth-button-icon
		width 20px
		height 20px
		margin-right 5px
		color $color-blue-light

	&__submenu
		position fixed
		color white
		background-color $main-blue
		width 100vw
		height 100vh
		left 0
		top -60px
		transition transform 0.41s cubic-bezier(0.69, 0.01, 0.25, 1)
		transform translateX(200%)

		&::before
			content ''
			position absolute
			left 0
			top 0
			width 100%
			height 145px
			background-color #1c1277

		&::after
			content attr(data-subtext)
			color #0de3f2
			font-size 20px
			position absolute
			bottom calc(100% - 146px)
			padding-bottom 25px
			left 50px
			font-weight 700
			transform translateX(-20px)
			transition opacity 0.1s cubic-bezier(0.69, 0.01, 0.25, 1) 0.68s, transform 0.1s cubic-bezier(0.69, 0.01, 0.25, 1) 0.68s
			background linear-gradient(90deg, #0de3f2 50%, transparent 0)
			background-position 0 100%
			background-size 64px 3px
			background-repeat no-repeat

		+aboveMedium()
			position absolute
			top 100%
			width 200px
			height auto
			opacity 0
			visibility hidden
			transform translateY(-20px)
			transition opacity 0.3s cubic-bezier(0.69, 0.01, 0.25, 1), transform 0.3s cubic-bezier(0.69, 0.01, 0.25, 1)

			&::before, &::after
				display none

	&--submenu-open &__submenu
		transform translateX(0)

	&__logged-out-navigation-link--submenu
		+aboveMedium()
			&:hover ~ .header-classic__submenu
				transform translateY(10px)
				opacity 1
				visibility visible
				z-index 2

	&__close-submenu
		position fixed
		background-color $main-blue
		top -60px
		cursor pointer
		outline none
		border none
		padding 20px 25px
		display inline-block
		border-radius 0 0 30px 0
		transition transform 0.41s cubic-bezier(0.69, 0.01, 0.25, 1)
		color $color-white
		font-size 16px
		transform translateX(-100%)

		+aboveMedium()
			display none

	&--submenu-open &__close-submenu
		transform translateX(0)
		transition-duration 0.77s
		transition-delay 0.3425s
		z-index 2

	&__subitem
		&:first-of-type
			margin-top 200px

		+aboveMedium()
			&:first-of-type
				margin-top 0
				border-top 4px solid #0de3f2

	&__sublink
		color $color-white
		max-width 300px
		margin 0 auto
		display block
		padding 20px
		font-size 18px
		text-decoration none
		font-weight 400

		+aboveMedium()
			background-color #f2f2f2
			color #1c1277
			padding 15px 20px
			transition background 0.3s cubic-bezier(0.69, 0.01, 0.25, 1), font-weight 0.3s cubic-bezier(0.69, 0.01, 0.25, 1)
			font-size 14px
			font-weight 300
			border-top 1px solid #d7d5f4