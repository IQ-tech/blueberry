@import '../variables.styl'

.iq-card
	componentDeepReset()
	width 100%
	height 100%
	flex 1
	background-color gray-0
	color gray-40
	border-radius 8px
	box-shadow 1px 3px 19px -6px gray-30

	&--dark
		background-color blueberry-80
		color gray-0

	&__section
		padding 24px

		&:not(:first-of-type)
			border-top 1px solid gray-20
