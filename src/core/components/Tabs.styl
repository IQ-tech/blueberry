@import '../variables.styl'

.iq-tabs
	width 100%

.iq-tabs-button
	componentDeepReset()
	border-radius 4px
	display flex
	width 100%

	&--notification-active
		.iq-tabs-button__item
			display block

			&-text
				position relative
				margin-top 14px

				span
					display block
					font-family 'Open Sans'
					background-color red-30
					border-radius 50%
					color white
					line-height 20px
					font-size 12px
					font-weight bold
					position absolute
					left 50%
					transform translateX(32px)
					top -15px
					height 20px
					width 20px

	&__item
		padding 14px 16px
		flex 1
		text-align center
		font-weight bold
		cursor pointer
		display flex
		align-items center
		justify-content center
		position relative
		transition color 0.3s cubic-bezier(0.61, 0.44, 0.05, 0.75)
		font-size 14px
		overflow hidden

		&-text
			position relative
			z-index 1
			color gray-50
			font-family 'Open Sans'

			span
				display none

		&--active
			border-bottom 1px solid blueberry-60

			.iq-tabs-button__item-text
				color blueberry-60

.iq-tabs-content
	&__list-holder
		display none

		&--show-content
			display block
