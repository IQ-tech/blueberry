@import '../variables.styl'

.tabs-button
	&__list
		border-radius 4px
		display flex
		width 100%

		+above(l)
			margin-bottom 40px

		&--notification-active
			.tabs-button__item 
				display block
				&-text
					position: relative
					margin-top: 14px
					span
						display block
						font-family "Open Sans"
						background-color: red-30
						border-radius: 50%
						color: white
						line-height 20px
						font-size: 12px
						font-weight: bold
						padding: 1px 8px
						position: absolute
						left: 50%
						transform translateX(32px)
						top: -15px

	&__item
		padding 12px
		flex 1
		text-align center
		font-weight bold
		cursor pointer
		display flex
		align-items center
		justify-content center
		position relative
		transition color .3s cubic-bezier(0.61, 0.44, 0.05, 0.75)
		font-size 14px
		overflow hidden

		&-text
			position relative
			z-index 1
			color gray-40
			font-family "Open Sans"

			span
				display none

		&--active
			border-bottom 1px solid blueberry-60

			.tabs-button__item-text
				color blueberry-60


.tabs-content
	&__list
		&-holder
			display none

			&--show-content
				display block

