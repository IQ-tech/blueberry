include ./subcomponents/FooterLink.pug
include ./subcomponents/Certificates.pug
include ./subcomponents/FooterInfo.pug
include ./subcomponents/Social.pug

mixin FooterClassic(partnerLogo = null, partnerEmail = null)
	footer.footer-classic
		nav.footer-classic__navigation
			.footer-classic__container(
				class="footer-classic__container--navigation"
			)
				.footer-classic__logo
					.footer-classic__iq
						svg(
							id="ic-logo"
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 40 56"
						)
							path(
								fill="currentColor"
								fillRule="evenodd"
								d="M32.782 38.193v9.682c0 3.058 2.25 5.603 5.187 6.076v-9.529c0-3.079-2.29-5.73-5.187-6.23zm-1.976-.085h.988v-1.97H26.25c-6.447 0-11.693-5.229-11.693-11.656 0-6.427 5.246-11.656 11.693-11.656 6.448 0 11.694 5.23 11.694 11.656v5.57h1.976v-5.57c0-7.513-6.132-13.626-13.67-13.626-7.537 0-13.669 6.113-13.669 13.626 0 7.513 6.132 13.626 13.67 13.626h4.555v-1.97h.003l.04-11.66c0-2.524-2.063-4.58-4.598-4.58-2.536 0-4.6 2.056-4.6 4.584 0 2.528 2.064 4.584 4.6 4.584v1.97c-3.626 0-6.576-2.94-6.576-6.554 0-3.614 2.95-6.554 6.576-6.554 3.625 0 6.575 2.94 6.575 6.554l-.041 11.717c4.029.498 7.16 3.996 7.16 8.223V56h-.988c-4.495 0-8.151-3.645-8.151-8.125v-9.767zM4.59 1.97a2.572 2.572 0 0 0-2.573 2.565A2.572 2.572 0 0 0 4.59 7.099a2.572 2.572 0 0 0 2.573-2.564A2.572 2.572 0 0 0 4.59 1.97zm0 7.1C2.082 9.07.04 7.034.04 4.534S2.083 0 4.59 0s4.55 2.034 4.55 4.535c0 2.5-2.042 4.534-4.55 4.534zm3.56 28.879c-4.493 0-8.15-3.645-8.15-8.125v-18.93h9.14v19.17H7.162v-17.2H1.976v16.96c0 3.394 2.77 6.155 6.175 6.155v1.97z"
							)
						
						if (partnerLogo)
							span em parceria com 

					if (partnerLogo)
						.footer-classic__partnership 
							img( src=partnerLogo alt="Logo do parceiro de iq")

				.footer-classic__pages-menu
					.footer-classic__links-group
						h2.footer-classic__links-group-title(data-menu='0') Sobre o iq
						ul.footer-classic__links-list
							+FooterLink({label: "Quem Somos", href: "https://www.iq.com.br/quem-somos/"})
							+FooterLink({label: "Termos de Uso", href: "https://www.iq.com.br/termos-e-condicoes/"})
							+FooterLink({label: "Política de Privacidade", href: "https://www.iq.com.br/politica-de-privacidade/"})
							+FooterLink({label: "FAQ", href: "https://www.iq.com.br/faq/"})

					.footer-classic__links-group
						h2.footer-classic__links-group-title(data-menu='1') Nossas soluções
						ul.footer-classic__links-list
							+FooterLink({label: "iq contas", href: "https://www.iq.com.br/"})
							+FooterLink({label: "iq cartões", href: "https://www.iq.com.br/cartao-de-credito/"})
							+FooterLink({label: "Conteúdo", href: "https://www.iq.com.br/conteudo"})
							+FooterLink({label: "Newsletter", href: "https://www.iq.com.br/newsletter/"})
							+FooterLink({label: "Consulta placa", href: "https://www.iq.com.br/veiculos/consulta-placa/"})
				
				.footer-classic__external-infos
					+SocialIcons()
					+Certificates()

		+FooterInfo(partnerEmail)



