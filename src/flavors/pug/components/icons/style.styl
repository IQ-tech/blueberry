*
	font-family 'Open sans'
	box-sizing border-box

.icon-box
	display flex
	flex-direction column
	align-items center
	padding 5px 0
	position relative

	&__icon-holder
		width 50px
		height 50px
		display flex
		align-items center
		justify-content center

		svg
			width 100%
			height auto
			display block

	&__name
		font-size 12px
		display block
		text-align center
		width 100%
		word-wrap break-word
		font-family: 'Courier New', monospace;

	&__full-desc
		position fixed
		top 0
